
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin'];
    }

    function isSuperAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    // Rules for collections
    // Rules for collections
    match /users/{userId} {
      // Allow 'get' for everyone. This is necessary because server-side actions (using Client SDK)
      // are unauthenticated and need to read the 'role' field to verify admin permissions.
      // We restrict 'list' to prevents harvesting of all user data.
      // Note: This theoretically allows retrieval of a user's email if their UID is known.
      allow get: if true;
      allow list: if isAdmin();
      
      allow create: if isAuth(); // Allow any authenticated user to create their own user doc
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if false; // Nobody can delete user profiles directly
    }

    match /registrations/{registrationId} {
      allow list: if isAdmin() || (resource.data.status == 'approved');
      allow get: if isOwner(registrationId) || isAdmin();
      allow create: if isAuth(); // Allow any authenticated user to create their own registration
      allow update: if isOwner(registrationId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /qna/{questionId} {
      allow read: if true;
      allow create: if isAuth();
      allow update, delete: if isAdmin();
      
      match /replies/{replyId} {
        allow read: if true;
        allow create: if isAuth();
        allow update, delete: if isAdmin();
      }
    }
    
    match /announcements/{announcementId} {
      allow read: if true;
      allow create, delete: if isAdmin();
    }
    
    // Content management collections
    match /faqs/{faqId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /schedule/{scheduleId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /organizers/{organizerId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /promotions/{promotionId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /locationPartners/{partnerId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Settings collections
    match /settings/{settingId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
  }
}
