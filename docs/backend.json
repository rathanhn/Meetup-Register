
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "displayName": {
          "type": "string"
        },
        "photoURL": {
          "type": "string",
          "format": "uri"
        },
        "role": {
          "type": "string",
          "enum": ["user", "viewer", "admin", "superadmin"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "accessRequest": {
          "type": "object",
          "properties": {
            "requestedAt": {
              "type": "string",
              "format": "date-time"
            },
            "status": {
              "type": "string",
              "enum": ["pending_review", "approved", "rejected"]
            }
          }
        }
      },
      "required": ["email", "role", "createdAt"]
    },
    "Registration": {
      "title": "Ride Registration",
      "description": "Represents a single registration for the ride event.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string"
        },
        "registrationType": {
          "type": "string",
          "enum": ["bike", "jeep", "car"]
        },
        "fullName": {
          "type": "string"
        },
        "age": {
          "type": "number"
        },
        "phoneNumber": {
          "type": "string"
        },
        "whatsappNumber": {
          "type": "string"
        },
        "photoURL": {
          "type": "string",
          "format": "uri"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "approved", "rejected", "cancellation_requested", "cancelled"]
        },
        "rider1CheckedIn": {
          "type": "boolean"
        },
        "rider1Finished": {
          "type": "boolean"
        },
        "certificateGranted": {
          "type": "boolean"
        },
        "cancellationReason": {
          "type": "string"
        },
        "statusLastUpdatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "statusLastUpdatedBy": {
          "type": "string"
        }
      },
      "required": ["uid", "registrationType", "fullName", "age", "phoneNumber", "createdAt", "status"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profile information, including their role and display name."
    },
    "/registrations/{registrationId}": {
      "schema": {
        "$ref": "#/entities/Registration"
      },
      "description": "Stores individual registrations for the ride event."
    }
  }
}
